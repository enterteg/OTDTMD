=form_for @post, html: {multipart: true, id: 'new_post'} do |f|
	-if @post.errors.any?
		%ul.errors
			- @post.errors.full_messages.each do |msg|
				%li= msg	

	.input
		= f.label :category_id
		= f.select :category_id, [['travels', 1], ['food', 2], ['my life', 3], ['about', 4]], prompt: '- select category -'
	.input
		= f.label :title
		= f.text_field :title
	.input
		= f.label :desc, 'Content'
		= f.text_area :desc, class: "tinymce"
	= f.label :photos
	= f.attachinary_file_field :photos

	.submit
		= f.submit
		
	= f.number_field :locX, type: 'hidden'
	= f.number_field :locY, type: 'hidden'
	